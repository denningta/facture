{
  "name": "facture",
  "displayName": "facture",
  "description": "Please enter a brief description here",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "facture",
        "aliases": [
          "Facture",
          "facture"
        ],
        "extensions": [
          ".fac"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "facture",
        "scopeName": "source.facture",
        "path": "./syntaxes/facture.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "facture",
        "path": "./snippets/facture-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "facturePreview.start",
        "title": "Facture Preview",
        "category": "Facture"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == facture",
          "command": "facturePreview.start",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:facture"
  ],
  "files": [
    "bin",
    "out",
    "src"
  ],
  "bin": {
    "facture": "./bin/cli"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build && npm run lint",
    "build": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "test": "mocha"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chevrotain": "^10.4.1",
    "circular-json": "^0.5.9",
    "commander": "^8.0.0",
    "fs-extra": "^11.1.0",
    "langium": "~1.0.0",
    "lit-html": "^2.6.1",
    "react": "^18.2.0",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/circular-json": "^0.4.0",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.17.3",
    "@types/sinon": "^10.0.13",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4.3.7",
    "eslint": "^8.17.0",
    "langium-cli": "~1.0.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
